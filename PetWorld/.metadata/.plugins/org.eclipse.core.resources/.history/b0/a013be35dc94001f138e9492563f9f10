<script>
    $(document).ready(function() {
        // 예약 목록 가져오기
        function loadReservations() {
            $.getJSON('${pageContext.request.contextPath}/reservation/list', function(data) {
                var tableContent = '';
                $.each(data, function(index, reservation) {
                    tableContent += '<tr>';
                    tableContent += '<td>' + reservation.id + '</td>';
                    tableContent += '<td>' + reservation.date + '</td>';
                    tableContent += '<td>' + (reservatuon.careTime ? '1시간' : '3시간' : '6시간' : '하루' : '2일이상')
                    tableContent += '<td>' + (reservation.petsitter ? '1등급' : '2등급' : '3등급') + '</td>';
                    tableContent += '<td>' + (reservation.petNum ? '1마리' : '2마리' : '3마리' : '4마리' : '5마리이상')
                    tableContent += '<td>' + (reservation.bathService ? 'Yes' : 'No') + '</td>';
                    tableContent += '<td>' + (reservation.walkService ? 'Yes' : 'No') + '</td>';
                    tableContent += '<td>' + (reservation.pickupService ? 'Yes' : 'No') + '</td>';
                    tableContent += '<td><button onclick="deleteReservation(\'' + reservation.id + '\')">삭제</button></td>';
                    tableContent += '</tr>';
                });
                $('#reservationTable tbody').html(tableContent);
            });
        }

        // 예약 삭제
        function deleteReservation(id) {
            if (confirm('정말로 이 예약을 삭제하시겠습니까?')) {
                $.ajax({
                    url: '${pageContext.request.contextPath}/reservation/delete/' + id,
                    type: 'DELETE',
                    success: function(response) {
                        alert(response);
                        loadReservations();
                    }
                });
            }
        }

        // 예약 목록 로드
        loadReservations();

        // 예약 추가
        $('#addReservationForm').submit(function(event) {
            event.preventDefault();
            var formData = $(this).serialize();
            $.post('${pageContext.request.contextPath}/reservation/add', formData, function(response) {
                alert(response);
                loadReservations();
            });
        });
    });
</script>
</head>
