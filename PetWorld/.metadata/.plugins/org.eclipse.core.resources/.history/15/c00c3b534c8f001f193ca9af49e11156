<script>
  var faqHeader = document.querySelector(".acc");
  var panel = document.querySelector(".panel");

  faqHeader.addEventListener("click", function() {
      // 패널의 display를 토글
      if (panel.style.display === "block") {
          panel.style.display = "none";
      } else {
          panel.style.display = "block";
      }
  });
</script>

