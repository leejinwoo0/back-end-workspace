<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.PetsitterMapper">
<resultMap id="petsitterMap" type="Petsitter">
<id column="petsitter_code" property="petsitterCode"/>
<result column="serviceman_class" property="petsitterClass"/>
<result column="serviceman_phone" property="servicemanPhone"/>
<result column="price" property="price"/>
</resultMap>


<!-- 돌봄서비스사 목록조회 -->
<select id="getPetsitterList" resultMap="petsitterMap">
SELECT serviceman_code, serviceman_class, serviceman_phone
FROM Petsitter
</select>
</mapper>

